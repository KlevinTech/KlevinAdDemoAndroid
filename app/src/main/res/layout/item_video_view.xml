<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/ll_ad_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/layout_ad_video_container"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <ImageView
                android:id="@+id/iv_ad_close_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/native_ad_close_icon" />

            <ImageView
                android:id="@+id/iv_ad_mute_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/layout_ad_video_container"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:src="@mipmap/native_ad_mute_on" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/iv_ad_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tv_ad_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_ad_icon"
                android:layout_toLeftOf="@+id/btn_download"
                android:layout_toRightOf="@id/iv_ad_icon"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/item_video_view_title"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_ad_desc"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_ad_icon"
                android:layout_toLeftOf="@+id/btn_download"
                android:layout_toRightOf="@id/iv_ad_icon"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1"
                android:maxLines="2"
                android:text="@string/item_video_view_desc"
                android:textColor="@color/gray"
                android:textSize="10sp" />

            <com.tencent.klevinDemo.view.LinearProgressBar
                android:id="@+id/btn_download"
                android:layout_width="86dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="立即下载" />

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="33dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="6dp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>